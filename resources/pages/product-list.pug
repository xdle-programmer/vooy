extends ../templates/visitor

block variables
    - var title = 'Vooy'

block content
    section.section.section--small
        .layout
            +breadcrumbs([{name: 'Главная', link: '/_index.html'}, {name: 'Список товаров', link: '#'}])
            +titleCount('Список поставщиков','201')

    section.section.section--small
        .layout
