mixin chat(options)
    - let exampleNumber = options.exampleNumber
    - let title = options.title
    - let form = options.form

    .chat
        .chat__title=title
        .chat__messages
            if exampleNumber === '1'
                +chatExample1
            else if exampleNumber === '2'
                +chatExample2

        if form
            +chatForm